# Toolgate — ENV example (per service)

NODE_ENV=production
SENTRY_DSN=
HMAC_KEY=replace_me_with_long_random_secret
ALLOW_HOSTS=internal.local,httpbin.org

DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB
REDIS_URL=redis://:PASSWORD@HOST:PORT/0
USE_REDIS=false

# Para Gateway (conecta al collector)
COLLECTOR_URL=http://localhost:8785

# Para Web UI (URLs públicas)
NEXT_PUBLIC_TOOLGATE_COLLECTOR_URL=http://localhost:8785
NEXT_PUBLIC_TOOLGATE_PROXY_URL=http://localhost:8787
NEXT_PUBLIC_TOOLGATE_SANITIZER_URL=http://localhost:8786
